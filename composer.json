{
    "name": "abra/abra-statamic-redirect",
    "description": "A flexible redirects manager for Statamic with file-based and database storage options",
    "type": "statamic-addon",
    "license": "MIT",
    "authors": [
        {
            "name": "Mike Slinkman",
            "email": "mike@abra.ai"
        }
    ],
    "autoload": {
      "psr-4": {
        "Abra\\AbraStatamicRedirect\\": "src/"
      }
    },
    "autoload-dev": {
      "psr-4": {
        "Abra\\AbraStatamicRedirect\\Tests\\": "tests/"
      }
    },
    "require-dev": {
        "orchestra/testbench": "^10.6",
        "pestphp/pest": "^4.0",
        "mockery/mockery": "^1.6",
        "laravel/pint": "^1.0",
        "phpstan/phpstan": "^1.0",
        "rector/rector": "^1.0"
    },
    "require": {
        "php": "^8.1",
        "statamic/cms": "^5.64"
    },
    "config": {
        "allow-plugins": {
            "pixelfear/composer-dist-plugin": true,
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
      "statamic": {
        "name": "Abra Statamic Redirect",
        "description": "Manage site redirects with file-based and database storage options"
      },
      "laravel": {
        "providers": [
          "Abra\\AbraStatamicRedirect\\ServiceProvider"
        ]
      }
    },
    "scripts": {
        "test": "pest",
        "test:unit": "pest tests/Unit",
        "test:feature": "pest tests/Feature",
        "test:coverage": "pest --coverage --min=80 --coverage-html=build/coverage --coverage-clover=build/coverage/clover.xml",
        "pint": "./vendor/bin/pint",
        "pint:check": "./vendor/bin/pint --test",
        "pint:dirty": "./vendor/bin/pint --dirty",
        "stan": "./vendor/bin/phpstan analyse",
        "stan:baseline": "./vendor/bin/phpstan analyse --generate-baseline",
        "rector": "./vendor/bin/rector process",
        "rector:dry": "./vendor/bin/rector process --dry-run",
        "code:check": [
            "@pint:check",
            "@stan",
            "@test"
        ],
        "code:fix": [
            "@pint",
            "@rector",
            "@test"
        ]
    }
}
